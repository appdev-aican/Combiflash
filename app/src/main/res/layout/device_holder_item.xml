<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5pt"
    android:background="#3CD184">
    <ImageView
        android:id="@+id/img"
        android:src="@drawable/sparking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CombiFlash "
        android:lineSpacingExtra="2sp"
        android:layout_marginTop="5pt"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/txt2"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:lineSpacingExtra="2sp"
        android:textColor="#94000000"
        android:textSize="12sp"
        android:paddingBottom="5pt"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:textColor="#FF3D00"
        android:textSize="16sp"
        android:layout_marginEnd="20pt"
        android:layout_marginTop="1pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/timerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/disconnect"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="1 mins remaining"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#036C77"
        app:layout_constraintStart_toStartOf="@id/disconnect"
        app:layout_constraintEnd_toEndOf="@id/disconnect"/>
</androidx.constraintlayout.widget.ConstraintLayout>